<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/imgBg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/tut_2"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:layout_weight="1"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Book your order"
                        android:gravity="center_horizontal"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        fontPath="@string/GothamRndBold"
                        android:textColor="@color/colorBlack"
                        />

                    <View
                        android:layout_marginTop="33dp"
                        android:layout_width="50dp"
                        android:layout_height="2dp"
                        android:gravity="center"
                        android:background="@color/colorBlack"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Reserve your delicious lunch days \nbefore. We offer flat delivery fee \nof IDR 10.000 per address"
                        android:gravity="center_horizontal"
                        android:textSize="14sp"
                        fontPath="@string/GothamBook"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="53dp" />



                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>


    </RelativeLayout>


</FrameLayout>