<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:fitsSystemWindows="true">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMarginStart="48dp"
            app:expandedTitleMarginEnd="64dp"
            android:fitsSystemWindows="true">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:elevation="2dp"
                app:layout_collapseMode="pin">
                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/back_button_circle_bg"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"/>
                <LinearLayout
                    android:layout_marginTop="6dp"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginRight="8dp"
                    android:layout_alignParentRight="true">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="38dp"
                        android:layout_alignParentRight="true">
                        <ImageView
                            android:padding="2dp"
                            android:id="@+id/btnCart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/cart_button_circle_bg"/>

                        <LinearLayout
                            android:id="@+id/wrapCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="3dp"
                            android:background="@drawable/bg_circle_green"
                            android:orientation="horizontal"
                            android:minHeight="12dp"
                            android:minWidth="12dp"
                            android:layout_marginLeft="30dp"
                            >
                            <TextView
                                android:id="@+id/countCart"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="0"
                                android:textColor="@color/colorWhite"
                                android:textStyle="bold"
                                android:textSize="10dp"
                                android:minHeight="12dp"
                                android:minWidth="12dp"/>
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:fitsSystemWindows="true"
            app:layout_collapseMode="parallax">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:padding="10dp"
                android:visibility="gone"
                android:background="@color/colorWhite"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:text="delihome"
                    android:textColor="#bdbdbd"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    fontPath="@string/GothamRndBold"
                    android:layout_centerInParent="true"
                    />

            </RelativeLayout>

            <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fitsSystemWindows="true"
                        app:layout_collapseMode="parallax">
                        <ImageView
                            android:id="@+id/imgMenu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorDarkGrey"
                            android:scaleType="fitXY"
                            android:adjustViewBounds="true"

                            />
                        <ProgressBar
                            android:id="@+id/progress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"/>
                        <LinearLayout
                            android:id="@+id/timeLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/rounded_accent"
                            android:orientation="vertical"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:visibility="gone">
                            <TextView
                                android:id="@+id/timeMenu"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="15"
                                android:textColor="@color/colorWhite"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:layout_gravity="center_horizontal"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="MINS WAIT"
                                android:textColor="@color/colorWhite"
                                android:textSize="11dp"
                                android:textStyle="bold"
                                android:layout_gravity="center_horizontal"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="OR LONGER"
                                android:textColor="@color/colorWhite"
                                android:textSize="10dp"
                                android:layout_gravity="center_horizontal"
                                />
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_marginRight="100dp"
                            android:layout_alignParentBottom="true">
                            <LinearLayout
                                android:id="@+id/layoutDeliveryDate"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:orientation="horizontal"
                                android:layout_marginTop="135dp"
                                android:background="#9c77726e">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="14dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_gravity="center_vertical"
                                    android:text="Delivery : "
                                    fontPath="@string/GothamRndItalic"
                                    />
                                <TextView
                                    android:id="@+id/hariMenu"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="14dp"
                                    android:gravity="left"
                                    android:textStyle="bold"
                                    android:layout_gravity="center_vertical"
                                    fontPath="@string/GothamRndItalic"
                                    android:text=""
                                    />
                                <TextView
                                    android:id="@+id/separateComma"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="14dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_gravity="center_vertical"
                                    fontPath="@string/GothamRndItalic"
                                    android:text=","
                                    />
                                <TextView
                                    android:id="@+id/tanggalMenu"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="14dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_gravity="center_vertical"
                                    android:textStyle="bold"
                                    fontPath="@string/GothamRndItalic"
                                    android:text=""
                                    />
                            </LinearLayout>
                        </RelativeLayout>
                    </RelativeLayout>



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:padding="10dp"
                        android:background="@color/colorWhite"
                        android:text="FEEDBACK"
                        android:visibility="gone"/>
                    <ListView
                        android:id="@+id/feedbackList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorWhite"
                        android:dividerHeight="1dp"
                        android:visibility="gone"
                        />
                    <LinearLayout
                        android:id="@+id/spaceLayout"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="vertical"
                        android:visibility="gone"/>
                </LinearLayout>

            </RelativeLayout>
        </ScrollView>
        </LinearLayout>

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:layout_collapseMode="pin" />

        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorWhite"
            android:padding="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/nameMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama menu : -"
                    android:textColor="@color/colorDarkGrey"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp"

                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/colorWhite">
                <TextView
                    android:id="@+id/priceMenu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/colorRed"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:paddingTop="10dp"
                    android:layout_gravity="center_vertical"
                    android:text="Rp 0"
                    />
                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="120dp"
                    android:layout_height="40dp">
                    <Button
                        android:layout_alignParentRight="true"
                        android:id="@+id/btnAdd"
                        android:layout_width="80dp"
                        android:layout_height="35dp"
                        android:background="@drawable/rounded_line_red"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/colorRed"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:text="+ ADD"
                        />
                    <LinearLayout
                        android:id="@+id/layCounter"
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/btnMinus"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:text="-"
                            android:textStyle="bold"
                            android:textSize="20dp"
                            android:gravity="center"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/colorRed"/>
                        <TextView
                            android:id="@+id/txtCount"
                            android:layout_width="60dp"
                            android:layout_height="30dp"
                            android:text="1"
                            android:textStyle="bold"
                            android:textSize="20dp"
                            android:gravity="center"
                            android:layout_gravity="center_vertical"/>
                        <TextView
                            android:id="@+id/btnPlus"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:text="+"
                            android:textStyle="bold"
                            android:textSize="20dp"
                            android:gravity="center"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/colorRed"/>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
            <TextView
                android:layout_marginTop="15dp"
                android:id="@+id/txtDeskripsi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deskripsi"
                />
            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                />
            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:textColor="@color/colorDarkGrey"
                android:textStyle="bold"
                android:layout_alignParentBottom="true"

                />
            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/txtHashtag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                />
            <Button
                android:id="@+id/btnPesanSkrg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@color/colorRed"
                android:layout_alignParentBottom="true"
                android:text="Order Now"
                android:textColor="@color/colorWhite"
                android:visibility="gone"/>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


</android.support.design.widget.CoordinatorLayout>