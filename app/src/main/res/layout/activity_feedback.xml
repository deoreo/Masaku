<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrey">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp"
        android:background="@color/colorRed"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Feedback"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textSize="16dp"
            />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_white"
                android:orientation="vertical"
                android:padding="10dp">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/profile_image"
                    android:src="@drawable/person_icon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:riv_corner_radius="60dip"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/namaVendor"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama Vendor"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    android:textColor="@color/colorBlack"
                    fontPath="@string/GothamRndMedium"
                    android:gravity="center_horizontal"
                    />
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Silahkan tinggalkan feedback dan"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    android:textColor="@color/colorBlack"
                    fontPath="@string/GothamRndMedium"
                    android:gravity="center_horizontal"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="upload foto dari pesanan yang anda order"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    android:textColor="@color/colorBlack"
                    fontPath="@string/GothamRndMedium"
                    android:gravity="center_horizontal"
                    />
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Agar kami dapat meningkatkan kualitas"
                    android:textSize="14dp"
                    android:textColor="@color/colorDarkGrey"
                    android:gravity="center_horizontal"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="dan kepuasan anda"
                    android:textSize="14dp"
                    android:textColor="@color/colorDarkGrey"
                    android:gravity="center_horizontal"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_white"
                android:orientation="vertical"
                android:paddingBottom="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:background="@color/colorDarkGrey">
                    <ImageView
                        android:id="@+id/imgUpload1"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:background="@color/colorDarkGrey2"
                        android:layout_marginRight="1dp"
                        />
                    <ImageView
                        android:id="@+id/imgUpload2"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:background="@color/colorDarkGrey2"
                        android:layout_marginRight="1dp"
                        android:layout_marginLeft="1dp"
                        />
                    <ImageView
                        android:id="@+id/imgUpload3"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:background="@color/colorDarkGrey2"
                        android:layout_marginLeft="1dp"
                        />
                </LinearLayout>
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rating"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    android:textColor="@color/colorBlack"
                    android:paddingLeft="10dp"
                    />
                <RatingBar
                    style="@style/CustomRatingBarBig"
                    android:layout_marginTop="10dp"
                    android:id="@+id/rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:stepSize="1"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_white"
            android:orientation="vertical"
            android:paddingBottom="10dp">
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Komentar"
                android:textStyle="bold"
                android:textSize="14dp"
                android:textColor="@color/colorBlack"
                android:paddingLeft="10dp"
                />
            <EditText
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="160"
                android:hint="ketik disini (max 160 character)"/>
        </LinearLayout>
            <Button
                android:id="@+id/btnSelesai"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:background="@drawable/rounded_line_red"
                android:layout_gravity="center_horizontal"
                android:text="SELESAI"
                android:textColor="@color/colorWhite"
                android:gravity="center"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>