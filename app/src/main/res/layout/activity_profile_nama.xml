<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrey">
    <!-- Screen Design for Photos -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp"
        android:background="@color/colorRed"
        android:elevation="5dp"
        android:visibility="gone"
        >

        <TextView
            android:id="@+id/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Profile"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textSize="16dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:orientation="horizontal"
            android:layout_alignParentRight="true">

            <ImageView
                android:padding="5dp"
                android:id="@+id/btnCart"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:src="@drawable/cart_90"/>
        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp"
        android:background="@color/colorRed"
        >

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/back"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/labelNama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Ganti Nama"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textSize="16dp"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_alignParentRight="true">

        </RelativeLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        >
            <LinearLayout
                android:id="@+id/btnNamaProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/colorWhite"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="15dp"
                android:paddingTop="15dp">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/namabtn"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center_vertical"/>
                <EditText
                    android:id="@+id/namaProfile"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:paddingLeft="20dp"
                    android:text="Nama Anda"
                    android:textColor="@color/colorBlack"
                    android:background="@null"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:textSize="15sp"
                    android:imeOptions="actionDone"
                    />
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/next_grey"
                    android:visibility="gone"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>


    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/btnSimpan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_margin = "20dp"
        android:background="@color/colorRed"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">
            <TextView
                android:id="@+id/btnRequestRide"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:text="SIMPAN"
                android:textSize="18dp"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                fontPath="@string/GothamRndBold"
                />
            <ImageView
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="-8dp"
                android:layout_alignParentRight="true"
                android:visibility="gone"
                android:src="@drawable/next_white" />
        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>